@model Invoice_Task.Views.Pages.Index
<style>
    td{
        border-style:solid;
        border-width:3px;
    }
</style>
<div style="margin:30px;">
    <a class="btn btn-success" asp-controller="home" asp-action="AddInvoice">Add new Invoice</a>
<br />
<br />
<table class="table table-striped">
    <thead >
    <tr style="background-color:darkblue;color:white;">
        <td >Code</td>
        <td >Date</td>
        <td >Customer</td>
        <td >Amount</td>
    </tr>
    </thead>
    <tbody>
    @{
    foreach (var InvoiceViewIitem in Model.invoiceViews)
    {
       <tr>
                        @{
                            var ls=InvoiceViewIitem.GetAllvalues();
                            int i = 0;
                            foreach (var propValue in ls)
                            {
                                if (i == ls.Count - 1)
                                {
                                    <td>@propValue &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-warning">Edit</a>&nbsp;<a class="btn btn-danger" asp-controller="Home" asp-action="Delete">Delete</a></td>
                                }
                                else
                                {
                                    <td >@propValue</td>
                                }
                                i++;
                            }
                }
       </tr>
    }
    }
    </tbody>
</table>
    <div>
    <table class="table">
        <thead>
            <tr>
            <td style="border-width:0px;">
                        <label style="margin-bottom:25px;" > Pagination</label>
            </td>
            <td style="border-width:0px;">
                        <a class="nav-link"  href="?pagenum=@(Model.Pagenum-1)" style="font-size:40px;">
                            &#9666;&#9666;
                </a> 
               
            </td>
            <td style="border-width:0px;">
                        <a href="" class="nav-link" style="font-size:40px;">&#9656;</a> 
            </td >
                    <td style="border-width:0px;">
                        <a class="nav-link" href="?pagenum=@(Model.Pagenum+1)" style="font-size:40px;">
                            &#9656;&#9656;
                        </a>
                    </td>
            </tr>
        </thead>
    </table>
    </div>
</div>